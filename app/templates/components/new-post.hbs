{{#if addNewPost}}
<div class="panel panel-info">
  <div class="panel-heading">
    <h1>New Post:</h1>
  </div>
  <div class="panel-body">
    <div>
      <form>

        <div class="form-group">
        <label for="title">Post Title</label>
        {{input class="form-control" value=title id="title"}}
      </div>
      <!-- <div class="form-group">
        <label for="tags">Category/Tag</label>
        {{input class="form-control" value=tags id="tags"}}
      </div> -->
      <div class="form-group">
        <label for="content">Content</label>
        {{textarea class="form-control" rows="6" value=content id="content"}}
      </div>
      <div class="panel-footer">
        <button class="btn bg-info"{{action 'savePost'}}>Publish</button>
      </div>
      </form>
    </div>
  </div>
</div>


{{else}}
  <button class="btn bg-info"{{action 'postFormShow'}}>New Post</button>
{{/if}}
