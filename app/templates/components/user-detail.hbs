<div class="comp">
  <p>{{user.name}}</p>
  <br>
  <p><img src={{user.img}} alt=""></p>
  <p>
    {{user.bio}}
  </p>
  <div class="well">
    <h3>{{user.name}}'s posts:</h3>
    <hr>
    <ul>
      {{#each user.posts as |post|}}
        <li>{{#link-to 'post' post.id}}{{post.title}}{{/link-to}}</li>
      {{/each}}
  </ul>
  </div>
  <button class="btn bg-danger" {{action 'delete' user}}>Delete User</button>
</div>
