{{#if addNewUser}}
<div class="panel panel-success">
  <div class="panel-heading">
    <h1>New User:</h1>
  </div>
  <div class="panel-body">
    <div>
      <form>
        <div class="form-group">
        <label for="name">User Name</label>
        {{input class="form-control" value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="img">Image URL</label>
        {{input class="form-control" value=img id="img"}}
      </div>
      <div class="form-group">
        <label for="bio">Bio</label>
        {{textarea class="form-control" rows="6" value=bio id="bio"}}
      </div>
      <div class="panel-footer">
        <button class="btn bg-success"{{action 'saveUser1'}}>Join</button>
      </div>
      </form>
    </div>
  </div>
</div>


{{else}}
  <button class="btn bg-success"{{action 'userFormShow'}}>Create New User</button>
{{/if}}
